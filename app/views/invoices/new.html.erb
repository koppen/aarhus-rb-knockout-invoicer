<h1>New invoice</h1>

<%= render 'form' %>

<%= link_to 'Back', invoices_path %>

<%= javascript_tag do %>
  $(document).ready(function() {
    invoice = new Invoice;
    ko.applyBindings(invoice, $('.total')[0]);

    $('.invoice-line').each(function(index, node) {
      invoiceLine = new InvoiceLine();
      invoice.lines.push(invoiceLine);
      ko.applyBindings(invoiceLine, node);
    });
  })
<% end %>
